<%= render 'shared/errors', object: @hostel %>

<%= form_with model: [@country, @region, @city, @hostel] do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :name %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :name, placeholder: "Name hostel", class: 'form-control' %>
    </div>
  </div>

    <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :description %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
    </div>
  </div>

    <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :price %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :price, placeholder: "Price", class: 'form-control' %>
    </div>
  </div>

    <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :region_name %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :region_name, placeholder: "Region", class: 'form-control' %>
    </div>
  </div>

    <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :city_name %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :city_name, placeholder: "City", class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>