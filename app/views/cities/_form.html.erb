<%= render 'shared/errors', object: @city%>

<%= form_with model: [@country, @region, @city] do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :name %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :name, placeholder: "Name country", class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>