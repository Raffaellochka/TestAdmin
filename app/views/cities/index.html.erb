<h1 class='mb-4'>Cities</h1>

<%= link_to "New city", new_country_region_city_path, class: 'btn btn-primary btn-lh' %>
<% @cities.each do |city| %>
  <article class='card mt-3'>
    <div class='card-body'>
      <h4><%= city.name %></h4>
  
      <%= link_to 'Show', country_region_city_hostels_path(@country, @region, city), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_country_region_city_path(@country, @region, city), class: 'btn btn-secondary' %>
      <%= link_to 'Delete', country_region_city_path(@country, @region, city), class: 'btn btn-danger',
        data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>
  </article>
<% end %>